@model coretry.Models.Product

@{
    ViewData["Title"] = "Add-Products";
}

<div class="myform">
    <h1>Add Products</h1>

    <form asp-action="UpdateProduct" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Product name:</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label asp-for="Type" class="control-label">Product Type:</label>
            <select asp-for="Type" class="control-label">
                <option value="">Select</option>
                <option value="Metal">Metal</option>
                <option value="Plastic">Plastic</option>

            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description:</label>
            <textarea asp-for="Description" rows="5" cols="40"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Isavailable" class="control-label">Availability:</label>
            <input asp-for="Isavailable" type="checkbox" />
            <span asp-validation-for="Isavailable" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Deliverable" class="control-label">Deliverable:</label>
            <div>
                Wholesaler<input type="radio" asp-for="Deliverable" value="Wholesaler" />
                Retailer<input type="radio" asp-for="Deliverable" value="Retailer" />
            </div>
            <span asp-validation-for="Deliverable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" />
        </div>

    </form>
</div>