@model ProtivitiTaskManagement.Models.User

@{
    ViewData["Title"] = "AddUser";
}

<h1>AddUser</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserFirstName" class="control-label">First Name<span style=" color:red;">*</span></label>
                <input asp-for="UserFirstName" class="form-control" />
                <span asp-validation-for="UserFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserMiddleName" class="control-label">Middle Name</label>
                <input asp-for="UserMiddleName" class="form-control" />
                <span asp-validation-for="UserMiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLastName" class="control-label">Last Name<span style=" color:red;">*</span></label>
                <input asp-for="UserLastName" class="form-control" />
                <span asp-validation-for="UserLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassoword" class="control-label">Password<span style=" color:red;">*</span></label>
                <input asp-for="UserPassoword" class="form-control" type="password" />
                <span asp-validation-for="UserPassoword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRole" class="control-label">Role<span style=" color:red;">*</span></label>
                @*<input asp-for="UserRole" class="form-control" type=""/>*@
                <select id="UserRole" name="UserRole">
                    <option value="">Select a Role:</option>
                    <option value="Assignee">Assignee</option>
                    <option value="Creator">Creator</option>
                    <option value="Admin">Admin</option>
                    <option value="Approver">Approver</option>
                </select>
                <span asp-validation-for="UserRole" class="text-danger"></span>
                <br /><hr />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

